<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutTrackAdapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072700"
    tools:context=".view.TrackAdapter">

    <TextView
        android:id="@+id/textViewNomTrackAdapterTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="NOM TRACK"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewIconeTrack"
        app:layout_constraintStart_toEndOf="@+id/imageViewIconeTrack"
        app:layout_constraintTop_toTopOf="@+id/imageViewIconeTrack"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewArtisteAdapterTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="NOM ARTISTE"
        android:textColor="#AEAEAE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewIconeTrack"
        app:layout_constraintStart_toStartOf="@+id/textViewNomTrackAdapterTrack"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomTrackAdapterTrack" />

    <ImageView
        android:id="@+id/imageViewIconeTrack"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/no_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddTrackOrAlbum"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>